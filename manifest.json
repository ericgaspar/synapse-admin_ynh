{
    "name": "Synapse Admin",
    "id": "synapse-admin",
    "packaging_format": 1,
    "description": {
        "en": "",
        "fr": ""
    },
    "version": "0.5.0~ynh1",
    "url": "https://github.com/Awesome-Technologies/synapse-admin",
    "license": "Apache-2.0 License",
    "maintainer": {
        "name": ""
    },
    "requirements": {
        "yunohost": ">= 3.8.1"
    },
    "multi_instance": false,
    "services": [
        "nginx"
    ],
    "arguments": {
        "install" : [
            {
                "name": "domain",
                "type": "domain",
                "ask": {
                    "en": "Choose a domain name for Synapse Admin",
                    "fr": "Choisissez un nom de domaine pour Synapse Admin"
                },
                "example": "domain.org"
            },
            {
                "name": "path",
                "type": "path",
                "ask": {
                    "en": "Choose a path for Synapse Admin",
                    "fr": "Choisissez un chemin pour Synapse Admin"
                },
                "example": "/synapse-admin",
                "default": "/synapse-admin"
            },
            {
                "name": "is_public",
                "type": "boolean",
                "ask": {
                    "en": "Is it a public site?",
                    "fr": "Est-ce un site public ?"
                },
                "help": {
                    "en": "If enabled, Synapse Admin will be accessible by people who do not have an account. This can be changed later via the webadmin.",
                    "fr": "Si cette case est cochée, Synapse Admin sera accessible aux personnes n’ayant pas de compte. Vous pourrez changer ceci plus tard via la webadmin."
                },
                "default": true
            }
        ]
    }
}
